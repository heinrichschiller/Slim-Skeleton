{
    "name": "heinrichschiller/slim-skeleton",
    "description": "My own simple slim skeleton",
    "type": "project",
    "homepage": "https://github.com/heinrichschiller/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Heinrich Schiller",
            "email": "info@heinrich-schiller.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4 || ^8.0",
        "slim/slim": "^4.9",
        "slim/psr7": "^1.5",
        "php-di/php-di": "^6.3",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^2.3",
        "symfony/console": "^6.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.11",
        "symfony/var-dumper": "^5.3.10",
        "phpstan/phpstan": "^1.2.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "phpstan": "phpstan analyse",
        "phpunit": "phpunit",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml"
    }
}
